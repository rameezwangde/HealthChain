rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access for any authenticated user.
    // This is suitable for a prototype but should be locked down
    // for production to only allow users to access their own files.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
